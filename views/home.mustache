<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>
  <body>
	{{>nav}}
    <section class="home-slider js-fullheight owl-carousel bg-white">
      <div class="slider-item js-fullheight">
      	<div class="overlay"></div>
        <div class="container-fluid p-0">
          <div class="row d-md-flex no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
          	<div class="one-third order-md-last img js-fullheight" style="background-image:url({{page.hero.bg_image}});">
          		<div class="overlay"></div>
          	</div>
	          <div class="one-forth d-flex js-fullheight align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
	          	<div class="text mt-md-5">
		            <h1 class="mb-4">{{{page.hero.header}}}</h1><!-- Está entre 3 "{}" para que possa ler a quebra de linhas (<br>) no texto -->
		            <p>{{page.hero.subtext}}</p>
	            </div>
	          </div>
        	</div>
        </div>
      </div>
    </section>
	

		<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
			<div class="container">
				<div class="row no-gutters">
					<div class="col-sm-5 img img-2 d-flex align-items-center justify-content-center justify-content-md-end" style="background-image: url({{page.about.bg_image}}); position: relative"></div>
					<div class="col-sm-7 wrap-about py-5 ftco-animate">
	          <div class="heading-section mt-5 mb-4">
	          	<div class="pl-lg-5 ml-md-5">
		          	<span class="subheading">Sobre</span>
		            <h2 class="mb-4">{{page.about.header}}</h2>
	            </div>
	          </div>
	          <div class="pl-lg-5 ml-md-5">
							<p>{{page.about.subtext}}</p>
							<h3 class="mt-5">Nossas especialidades</h3>
							<div class="thumb my-4 d-flex">
					{{#page.about.sub_images}}
	            	<a href="#" class="thumb-menu pr-md-4 text-center">
	            		<div class="img" style="background-image: url({{image}});"></div>
	            		<h4>{{capition}}</h4>
	            	</a>
					{{/page.about.sub_images}}
	            </div>
						</div>
					</div>
				</div>
			</div>
		</section>

    <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section ftco-animate">
          	<span class="subheading">Produtos</span>
            <h2 class="mb-4">Nosso menu</h2>
          </div>
        </div>
        <div class="row">
        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Café</h3>
        		</div>
            {{#cafe}}
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
            </div>
            {{/cafe}}
        	</div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Cha</h3>
        		</div>
        		{{#cha}}
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
            </div>
            {{/cha}}
        	</div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Pastries</h3>
        		</div>
        		{{#pastries}}
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
            </div>
            {{/pastries}}
        	</div>
    </section>

    <section class="ftco-section testimony-section" style="background-image: url({{page.team.bg_image}});" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
          	<span class="subheading">{{page.team.header}}</span>
            <h2 class="mb-4">{{page.team.subheader}}</h2>
          </div>
        </div>
        <div class="row ftco-animate justify-content-center">
          <div class="col-md-7">
            <div class="carousel-testimony owl-carousel ftco-owl">
              {{#page.team.members}}
              <div class="item">
                <div class="testimony-wrap text-center py-4 pb-5">
                  <div class="user-img mb-4" style="background-image: url({{image}});  background-repeat: no-repeat; background-size: cover">
                    <span class="quote d-flex align-items-center justify-content-center">
                      <i class="icon-quote-left"></i>
                    </span>
                  </div>
                  <div class="text p-3">
                    <p class="mb-4">{{quote}}</p>
                    <p class="name">{{name}}</p>
                    <span class="position">{{position}}</span>
                  </div>
                </div>
              </div>
              {{/page.team.members}}
            </div>
          </div>
        </div>
      </div>
    </section>
			

		<section class="ftco-section ftco-no-pt ftco-no-pb">
			<div class="container">
				<div class="row d-flex">
        {{#page.order}}
          <div class="col-md-5 ftco-animate img img-2" style="background-image: url({{image}});"></div>
        {{/page.order}}
          <div class="col-md-7 ftco-animate makereservation p-4 p-md-5">
          	<div class="heading-section ftco-animate mb-5">
	          	<span class="subheading">Faça seu Pedido</span>
	            <h2 class="mb-4">Informações</h2>
	          </div>
            <form action="/order" method="post">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Nome</label>
                    <input id="order-name" type="text" class="form-control" placeholder="Nome" name="name">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Email</label>
                    <input id="order-email" type="text" class="form-control" placeholder="Email" name="email">
                  </div>
                </div>
                <div class="col-md-12">
                  <div id="btn-order-container" class="form-group">
                    <label for="">Pedido</label>
                    <textarea id="order-description" class="form-control" rows="8" placeholder="Descreva seu pedido aqui..." name="order"></textarea>
                  </div>
                </div>
                <div class="col-md-12 mt-3">
                  <div class="form-group">
                    <input id="btn-order" type="submit" value="Enviar Pedido" class="btn btn-primary py-3 px-5">
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
			</div>
		</section>

    {{>footer}}
  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>
    {{>scripts}}
    <script>
      (function(){
        $('#btn-order').click(function(event){
          if(event)
            event.preventDefault()
          
          var order = {
            name: $('#order-name').val(),
            email: $('#order-email').val(),
            order: $('#order-description').val()
          }
          console.log('Place order: ' + JSON.stringify(order))
          $.ajax({
            url: '/order',
            method: 'POST',
            data: order,
            success: function(resp) {
              console.log('Order received ' + JSON.stringify(resp))
              $('#btn-order-container').html('<h3>Seu pedido foi enviado com sucesso</h3>')
            },
            error: function(resp){

            }
          })
        })
      })()
    </script>
  </body>
</html>